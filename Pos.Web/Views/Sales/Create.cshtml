@model Pos.Web.DTOs.SalesDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="pagetitle">
    <h1>Nueva Venta</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Ventas</li>
            <li class="breadcrumb-item active">Nueva Venta</li>
        </ol>
    </nav>
</div>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="form-label">Fecha y Hora</label>
        <input asp-for="DateSales" class="form-control" />
        <span asp-validation-for="DateSales" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Descuento</label>
        <input asp-for="DiscountsSales" class="form-control" />
        <span asp-validation-for="DiscountsSales" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Valor total</label>
        <input asp-for="TotalSales" class="form-control" />
        <span asp-validation-for="TotalSales" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Metodo de pago</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="">Seleccione...</option> <!-- Opción por defecto -->
            <option value="Efectivo">Efectivo</option>
            <option value="Tarjeta de crédito">Tarjeta de crédito</option>
            <option value="Tarjeta de débito">Tarjeta de débito</option>
            <option value="Transferencia bancaria">Transferencia bancaria</option>
            <!-- Agrega más opciones según sea necesario -->
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Tipo de venta</label>
        <select asp-for="SalesType" class="form-control">
            <option value="">Seleccione...</option> <!-- Opción por defecto -->
            <option value="Venta al contado">Venta al contado</option>
            <option value="Venta a crédito">Venta a crédito</option>
            <option value="Venta por cuotas">Venta por cuotas</option>
            <option value="Venta con descuento">Venta con descuento</option>
            <!-- Agrega más opciones según sea necesario -->
        </select>
        <span asp-validation-for="SalesType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Cliente</label>
        <select asp-for="CustomerId" class="form-control" asp-items="Model.Customer"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
