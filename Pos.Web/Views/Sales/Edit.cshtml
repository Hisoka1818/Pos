@model Pos.Web.DTOs.SalesDTO

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DateSales" class="control-label"></label>
                <input asp-for="DateSales" class="form-control" />
                <span asp-validation-for="DateSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountsSales" class="control-label"></label>
                <input name="DiscountsSales" class="form-control" value="@Model.DiscountsSales.ToString("0.00")" id="DiscountsSales" />
                <span asp-validation-for="DiscountsSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalSales" class="control-label"></label>
                <input name="TotalSales" class="form-control" value="@Model.TotalSales.ToString("0.00")" id="TotalSales" />
                <span asp-validation-for="TotalSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <input asp-for="PaymentMethod" class="form-control" />
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesType" class="control-label"></label>
                <input asp-for="SalesType" class="form-control" />
                <span asp-validation-for="SalesType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="Model.Customer"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
