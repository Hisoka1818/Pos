@model IEnumerable<Pos.Web.Data.Entities.Sales>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nueva Venta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateSales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountsSales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateSales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountsSales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesType)
            </td>
                <td>
                    @if (item.Customer != null)
                    {
                        @item.Customer.FirstName @Html.Raw("&nbsp;") @item.Customer.LastName
                    }
                    else
                    {
                        <text>Cliente no asignado</text>
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
